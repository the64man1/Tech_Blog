<div class="card">
    <div class='card-header p-3'>
        <h2 class='border-bottom'>Title</h2>
        <h3 contenteditable="true" id='title'>{{post.title}}</h3>
    </div>
    <div class='card-text p-3'>
        <h2 class='border-bottom'>Content</h2>
        <p contenteditable="true" id='content'>{{post.content}}</p>
    </div>
    <div class='form-group ml-3'>
        <button type='submit' id='submit-btn' class='btn btn-primary' data-id='{{post.id}}'>Update Blog Post</button>
    </div>
</div>

