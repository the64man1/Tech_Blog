<div class="text-center">
    <h2>{{post.title}}</h2>
    <p>{{post.content}}</p>
    <p>Posted by {{post.user.username}} on {{created_at}}</p>
</div>
<div>
    <h3>Add Comment:</h3>
    <form class='form new-comment-form'>
        <div class='form-group'>
            <label for='comment-content'>Content:</label>
            <input class='form-input' type='text' id='comment-content' name='comment-content' />
        </div>
        <div class='form-group'>
            <button type='submit' class='btn btn-primary' data-id='{{post.id}}'>Add Comment</button>
        </div>
    </form>
</div>

<script src='./js/post.js'></script>