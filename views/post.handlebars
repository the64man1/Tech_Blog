<div class="text-center">
    <h2>{{post.title}}</h2>
    <p>{{post.content}}</p>
    <p>Posted by {{post.user.username}} on {{post.updatedAt}}</p>
</div>
{{#if post.comments.length}}
<div class='comment-list'>
    {{#each post.comments as |comment|}}
    <div class="row mb-4">
    <div class="col-md-5">
        <p>{{comment.content}}</a>
        <p>Posted by: {{comment.user_id}} on {{comment.updated_at}}</p>
        <button type='submit' class='btn btn-sm btn-warning' data-id='{{comment.id}}'>Delete Comment</button>
        <a class='btn btn-sm btn-warning' href="/updateComment/{{comment.id}}">Update Comment</a>
    </div>
    </div>
    {{/each}}
</div>
{{/if}}
{{#if logged_in}}
<div>
    <h3>Add Comment:</h3>
    <form class='form new-comment-form'>
        <div class='form-group'>
            <input class='form-input' type='text' id='comment-content' name='comment-content' />
        </div>
        <div class='form-group'>
            <button type='submit' class='btn btn-primary' id='submit-btn' data-id='{{post.id}}'>Add Comment</button>
        </div>
    </form>
</div>
{{/if}}

<script src='/js/post.js'></script>