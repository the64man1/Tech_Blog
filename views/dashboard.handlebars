<div class="row">
    <div class="col-auto">
        <h2>Hello, {{username}}</h2>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-6">
        <h4>Create New Blog Post</h4>

        <form class="form new-post-form">
            <div class="form-group">
                <label for="post-title">Title:</label>
                <input class='form-input' type='text' id='post-title' name='post-title' />
            </div>
            <div class='form-group'>
                <label for='post-content'>Content:</label>
                <textarea class='form-input' type='text' id='post-content' name='post-content'></textarea>
            </div>
            <div class='form-group'>
                <button type='submit' class='btn btn-primary'>Create Blog Post</button>
            </div>
        </form>
    </div>

    {{#if posts.length}}
    <div class='col-md-6 post-list'>
        <h4>Posts:</h4>

        {{#each posts as |post|}}
        <div class='row mb-3'>
            <div class='col-md-8'>
                <h5><a href='/post/{{post.id}}'>{{post.title}}</a></h5>
                <p>{{post.content}}</p>
                <p>Last edited: {{format_date post.createdAt}}</p>
            </div>
            <div class='col-md-5'>
                <button class='btn btn-sm btn-warning' data-id='{{post.id}}'>Delete Post</button>
                {{!-- <button class='btn btn-sm btn-warning' data-id='{{post.id}}'>Update Post</button> --}}
                <a class='btn btn-sm btn-warning' href="/updatepost/{{post.id}}">Update Post</a>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src='./js/dashboard.js'></script>